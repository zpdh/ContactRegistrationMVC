@using ContactRegistrationMVC.Enums;
@model ContactRegistrationMVC.Models.UserModel

@{
    ViewData["Title"] = "Add User";
}
<div class="text-center">

    <h4>Add new User</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control" placeholder="loginexample" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserType" class="control-label">User type</label>
                <select asp-for="UserType" class="form-select">
                    <option value="0">---Select---</option>
                    <option value="@UserTypeEnum.Admin">Administrator</option>
                    <option value="@UserTypeEnum.Default">Default</option>
                </select>
                <span asp-validation-for="UserType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="myawesomepass123" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Add" class="btn btn-purple" />
                <a asp-action="Index" role="button" class="btn btn-secondary">Back to List</a>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
